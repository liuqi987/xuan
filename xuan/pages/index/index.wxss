
.dou{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.sou{
  text-indent: 50rpx;
  font-size: 30rpx;
}
.dou text{
  font-size: 50rpx;
  font-weight: bold;
  color:green;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.dou input{
  width: 250rpx;
  border: 2px solid #ccc;
  background-color: #eee;
  border-radius: 50rpx;
  height: 60rpx;
}
.title{
  font-size: 55rpx;
  margin-left: 20rpx;
  line-height: 130rpx;
}
text{
  display: block;
}
.hot{
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.hot view{
  width: 30%;
}
.hot image{
  width: 100%;
  height: 300rpx;
}
.hot text{
  font-size: 26rpx;
}
